<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <LangVersion>12</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Autofac" />
        <PackageReference Include="DiffMatchPatchCSharp" />
        <PackageReference Include="Discord.Net" />
        <PackageReference Include="Lavalink4NET.Artwork" />
        <PackageReference Include="Lavalink4NET.Cluster" />
        <PackageReference Include="Lavalink4NET.Discord.NET" />
        <PackageReference Include="LiteDB" />
        <PackageReference Include="MessagePack" />
        <PackageReference Include="MessagePackAnalyzer">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.Extensions.Configuration.Binder" />
        <PackageReference Include="NLog" />
        <PackageReference Include="System.Reactive" />
        <PackageReference Include="Tyrrrz.Extensions" />
    </ItemGroup>

    <ItemGroup>
        <None Update="Localization\ru.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Localization\en.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Localization\es.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Lavalink4NET.InactivityTracking\Lavalink4NET.InactivityTracking.csproj" />
    </ItemGroup>
</Project>
