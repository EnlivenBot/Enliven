<Project Sdk="Microsoft.NET.Sdk.Web">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <RootNamespace>Bot</RootNamespace>
        <AssemblyName>Enliven</AssemblyName>
        <Version>19.0</Version>
        <Nullable>enable</Nullable>
        <LangVersion>11</LangVersion>
        <UserSecretsId>d6df00aa-ccf3-410e-92e6-723b9cd92b2f</UserSecretsId>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Autofac.Extensions.DependencyInjection" Version="8.0.0"/>
        <PackageReference Include="SpotifyAPI.Web" Version="7.0.0"/>
        <PackageReference Include="VkNet" Version="1.75.0"/>
        <PackageReference Include="VkNet.AudioBypassService" Version="1.7.6"/>
        <PackageReference Include="Xabe.FFmpeg.Downloader" Version="5.2.6"/>
        <PackageReference Include="YandexMusicResolver" Version="6.0.0"/>
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0"/>
    </ItemGroup>

    <ItemGroup>
        <None Update="nlog.config">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="appsettings.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\ChatExporter\ChatExporter.csproj"/>
        <ProjectReference Include="..\Common\Common.csproj"/>
    </ItemGroup>

    <PropertyGroup>
        <InvariantGlobalization>false</InvariantGlobalization>
    </PropertyGroup>
</Project>