<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RootNamespace>Bot</RootNamespace>
    <AssemblyName>SKP-DB</AssemblyName>
    <AssemblyVersion>6.0</AssemblyVersion>
    <FileVersion>6.0</FileVersion>
    <Version>6.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CoreHtmlToImage" Version="1.0.5" />
    <PackageReference Include="Discord.Net" Version="2.1.1" />
    <PackageReference Include="Lavalink4NET.Discord.NET" Version="1.4.16" />
    <PackageReference Include="LiteDB" Version="5.0.4" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="NLog" Version="4.6.8" />
    <PackageReference Include="Scriban" Version="2.1.1" />
    <PackageReference Include="SharpZipLib" Version="1.2.0" />
    <PackageReference Include="System.Security.Permissions" Version="4.6.0-preview7.19362.9" />
    <PackageReference Include="Tyrrrz.Extensions" Version="1.6.5" />
    <PackageReference Include="Unicode.net" Version="0.1.2" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Localization\en.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Localization\ru.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="DiscordChatExporter.Core.Markdown, Version=2.16.0.0, Culture=neutral, PublicKeyToken=null">
      <HintPath>..\packages\DiscordChatExporter.Core.Markdown.dll</HintPath>
    </Reference>
    <Reference Include="DiscordChatExporter.Core.Models, Version=2.16.0.0, Culture=neutral, PublicKeyToken=null">
      <HintPath>..\packages\DiscordChatExporter.Core.Models.dll</HintPath>
    </Reference>
    <Reference Include="DiscordChatExporter.Core.Rendering, Version=2.16.0.0, Culture=neutral, PublicKeyToken=null">
      <HintPath>..\packages\DiscordChatExporter.Core.Rendering.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Music\AdvancedPlayer.cs" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Music\application.yml" />
  </ItemGroup>

</Project>